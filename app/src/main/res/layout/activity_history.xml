<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="comp5216.sydney.edu.au.keeprunning.activity.HistoryActivity">

    <RelativeLayout android:id="@+id/title_layout" android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/main_color">

        <TextView android:id="@+id/btn_back" android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:background="@android:color/transparent"
                  android:drawableLeft="@drawable/ic_keyboard_arrow_left_black_24dp"
                  android:gravity="center_vertical"
                  android:text="Back"
                  android:textColor="#ffffff"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:text="Running Log"
                  android:textColor="#ffffff"
                  android:textSize="18sp"/>

    </RelativeLayout>

    <ListView android:id="@+id/lv" android:layout_width="match_parent"
              android:layout_height="match_parent"/>

</LinearLayout>
